{
  "name": "yaf-extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/falsefalse/yaf-extension.git"
  },
  "version": "1.1.7",
  "private": true,
  "scripts": {
    "_prepare": "git stash -q && yarn -s lint && yarn -s test -R dot && jake -q clean",
    "release": "yarn -s _prepare && jake -q && open ./pkg",
    "release:firefox": "yarn -s _prepare && jake -q firefox && open ./pkg",
    "build": "DEV=1 jake -q",
    "build:firefox": "DEV=1 jake -q firefox",
    "typecheck": "tsc --noEmit -p ts.base.json",
    "lint": "yarn -s prettier --check & p=$! ; yarn -s eslint ||s=1 ; wait $p||s=1 ; exit $s",
    "eslint": "eslint --fix *.js src/ spec/ --ext .ts,.ejs.html",
    "prettier": "prettier -u --loglevel warn --ignore-path .gitignore . !**.ejs.html ",
    "pretest": "jake -q config[specs] templates[specs] module",
    "test": "mocha",
    "test:clean": "jake -q clean[specs]",
    "test:watch": "yarn -s test -R min --watch --parallel",
    "coverage": "c8 yarn -s test -R dot",
    "coverage:html": "c8 -r html report && open coverage/index.html"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-dom": "^1.11.0",
    "@types/chrome": "^0.0.227",
    "@types/firefox-webext-browser": "^111.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/jsdom-global": "^3.0.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/offscreencanvas": "^2019.7.0",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "chai-dom": "^1.11.0",
    "chai-html": "^2.1.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-lodash-template": "^0.21.0",
    "jsdom": "^21.1.1",
    "jsdom-global": "^3.0.2",
    "lodash.template": "^4.5.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.3",
    "sinon": "^15.0.3",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "uglify-js": "^3.17.4"
  }
}
