{
  "name": "yaf-extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/falsefalse/yaf-extension.git"
  },
  "version": "1.2.1",
  "private": true,
  "scripts": {
    "prerelease": "git stash -q && yarn -s lint && yarn -s test -R dot",
    "release": "jake -q clean ${TASK:-default} && open ./pkg",
    "release:firefox": "TASK=firefox yarn -s release",
    "release:tag": "v=$npm_package_version ; git tag -a -m 🏷 $v HEAD && git push --tags 2>&1 | grep $v",
    "build": "DEV=1 jake -q clean ${TASK:-default}",
    "build:firefox": "TASK=firefox yarn -s build",
    "typecheck": "tsc --noEmit -p ts.base.json",
    "lint": "yarn -s prettier --check & p=$! ; yarn -s eslint ||s=1 ; wait $p||s=1 ; exit $s",
    "eslint": "eslint --fix *.js src/ spec/ --ext .ts,.ejs.html",
    "prettier": "prettier -u --loglevel warn --ignore-path .gitignore !**.ejs.html . ",
    "pretest": "jake -q config[specs] templates[specs] module",
    "test": "TZ=utc mocha",
    "test:clean": "jake -q clean[specs]",
    "coverage": "c8 yarn -s test -R dot",
    "report": "c8 -r html report && open coverage/index.html",
    "coverage:ci": "c8 -o . -r json-summary yarn -s test",
    "report:ci": "c8 -o . -r text report"
  },
  "engines": {
    "node": "~18",
    "yarn": "~1.22"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/chai-dom": "^1.11.0",
    "@types/chrome": "^0.0.235",
    "@types/firefox-webext-browser": "^111.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/jsdom-global": "^3.0.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.1.0",
    "@types/offscreencanvas": "^2019.7.0",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "chai-dom": "^1.11.0",
    "chai-html": "^2.1.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-lodash-template": "^0.21.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "jake": "^10.8.7",
    "jsdom": "^22.0.0",
    "jsdom-global": "^3.0.2",
    "lodash.template": "^4.5.0",
    "mocha": "^10.2.0",
    "sinon": "^15.0.4",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "uglify-js": "^3.17.4"
  }
}
