{
  "include": ["src/**/*"],

  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",

    "noErrorTruncation": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,

    // modules
    "esModuleInterop": true,
    "module": "es2022",
    "target": "es2021",
    "esModuleInterop": true
  }
}
