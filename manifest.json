{
  "manifest_version": 3,

  "name": "Yet another flags",
  "short_name": "YAFlags",
  "description": "Shows flag for the website near the location bar",

  "version": "1.0.3",

  "background": {
    "service_worker": "build/service.js",
    "type": "module"
  },

  "permissions": ["tabs", "storage"],
  "host_permissions": ["http://geo.furman.im/*"],

  "icons": {
    "128": "img/icon/128.png",
    "48": "img/icon/48.png",
    "32": "img/icon/32.png",
    "16": "img/icon/16.png"
  },

  "action": {
    "default_icon": {
      "19": "img/icon/16_padded_to_19.png",
      "38": "img/icon/32_padded_to_38.png"
    },
    "default_title": "Yet Another Flags",
    "default_popup": "popup.html"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
