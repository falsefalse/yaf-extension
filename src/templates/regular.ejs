<li class="header"><%= locals.country_name || locals.domain  %></li>
<%
let hinted = (val, hint) => `<i title='${hint}'>${val}</i>`
let { city, region, postal_code } = locals

let area = []
city && area.push([city, 'City'])
region && area.push([region, 'Region'])
postal_code && area.push([postal_code, 'Postal Code'])

if (area.length) { %>
  <li>
    <%= area.map(a => hinted(...a)).join(', ') %>
    <%= hinted('📍', 'Located!') %>
  </li>
<% } %>
<li><%= hinted(locals.ip, 'IP address') %></li>
<li class="separator" />
<li class="service">
  <% let href = `http://whois.domaintools.com/${locals.domain}` %>
  <% let title = `Open ${href} in a new tab` %>
  <a class="whois" target="_blank" href="<%= href %>" title="<%= title %>">Whois</a>
</li>
