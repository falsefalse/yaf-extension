<li class="header"><%= locals.country_name || locals.domain  %></li>
<%
let area = [];
locals.city && area.push(locals.city);
locals.region && area.push(locals.region);
locals.postal_code && area.push(locals.postal_code);
if (area.length) { %>
  <li><%= area.join(', ') %><i title="Located!">📍</i></li>
<% } %>
<li><%= locals.ip %></li>
<li class="separator" />
<li class="service">
  <% let href = `http://whois.domaintools.com/${locals.domain}` %>
  <% let title = `Open ${href} in a new tab` %>
  <a class="whois" target="_blank" href="<%= href %>" title="<%= title %>">Whois</a>
</li>
